<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product-details.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="l-main bd-grid">

            <!--  -->
            <div class="home">
                <div class="sneaker">
                    <div class="sneaker__figure"></div>
                    
                    <div>
                        <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" class="sneaker__img shows" color="#665f5f57">
                        <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" class="sneaker__img" color="#111111">
                    </div>
    
                    <div class="sneaker__colors">
                        <span class="sneaker__color sneaker__colors-one active__bg" primary="#665f5f57" color="#665f5f57"></span>
                        <span class="sneaker__color sneaker__colors-two" primary="#111111" color="#111111"></span>
                    </div>
                </div>
    
                <div class="info">
                    <!-- ===== DATA ===== -->
                    <div class="data">
                        <span class="data__subtitle">Nike</span>
                        <h1 class="data__title"><%= product.title %></h1>
                        <p class="data__description"><%= product.description %></p>
                    </div>
    
                    <!-- ===== ACTIONS ===== -->
                    <div class="actions">
                        <!-- ===== SIZE ===== -->
                        <div class="size">
                            <h3 class="size__title">Tallas</h3>
                            <div class="size__content">
                                <span class="size__tallas active">
                                    8.5
                                </span>
                                <span class="size__tallas">
                                    9
                                </span>
                                <span class="size__tallas">
                                    9.5
                                </span>
                            </div>
                        </div>
    
                        <!-- ===== CANT ===== -->
                        <div class="cant">
                            <h3 class="cant__title">Cant.</h3>
                            <div class="cant__content"> 
                                <span>-</span>
                                <span>1</span>
                                <span>+</span>
                            </div>
                        </div>
                    </div>
    
                    <!-- ===== PRECI ===== -->
                    <form class="preci" action="/cart" method="POST">
                        <span class="preci__title">&#8377; <%= product.price %></span>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="preci__button">Add to Cart</button>
                        <input type="hidden" name="productId" value="<%= product._id %>">
                    </form>
                </div>
            </div>
